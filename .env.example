# Server Configuration
NODE_ENV=development
PORT=3000
ADMIN_PORT=3001
BASE_PATH=/TutorAI

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tutorai?schema=public

# Redis (Sessions)
REDIS_URL=redis://localhost:6379

# Session Configuration
SESSION_SECRET=change-this-to-a-secure-random-string-in-production
SESSION_MAX_AGE=86400000

# JWT Configuration
JWT_SECRET=change-this-to-a-different-secure-string
JWT_EXPIRES_IN=24h

# Admin Token (for ?token= access)
ADMIN_TOKEN=admin

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8091/TutorAI/auth/google/callback

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:8091/TutorAI/auth/microsoft/callback

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
