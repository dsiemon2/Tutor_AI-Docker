<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .navbar { background: linear-gradient(135deg, <%= branding.primaryColor %> 0%, <%= branding.secondaryColor %> 100%); }
    .card { border: none; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); }
    .child-card { transition: transform 0.2s; cursor: pointer; }
    .child-card:hover { transform: translateY(-5px); }
    .avatar { width: 60px; height: 60px; border-radius: 50%; background: linear-gradient(135deg, <%= branding.primaryColor %>, <%= branding.accentColor %>); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; }
    .mastery-0 { background: #ef4444; }
    .mastery-1 { background: #f97316; }
    .mastery-2 { background: #eab308; }
    .mastery-3 { background: #84cc16; }
    .mastery-4 { background: #22c55e; }
    .mastery-5 { background: #10b981; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent">
        <i class="bi bi-mortarboard-fill me-2"></i>TutorAI Parent Portal
      </a>
      <div class="d-flex align-items-center">
        <span class="text-white me-3">
          <i class="bi bi-person-circle me-1"></i><%= parent.firstName %> <%= parent.lastName %>
        </span>
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent/settings" class="btn btn-outline-light btn-sm me-2">
          <i class="bi bi-gear"></i>
        </a>
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent/logout" class="btn btn-outline-light btn-sm">
          <i class="bi bi-box-arrow-right"></i>
        </a>
      </div>
    </div>
  </nav>

  <div class="container">
    <!-- Welcome Section -->
    <div class="row mb-4">
      <div class="col-12">
        <h2>Welcome, <%= parent.firstName %>!</h2>
        <p class="text-muted">Track your children's learning progress</p>
      </div>
    </div>

    <!-- Children Cards -->
    <div class="row mb-4">
      <div class="col-12">
        <h5 class="mb-3"><i class="bi bi-people me-2"></i>Your Children</h5>
      </div>
      <% if (children.length === 0) { %>
      <div class="col-12">
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="bi bi-person-plus text-muted fs-1"></i>
            <p class="text-muted mt-3">No children linked yet</p>
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent/settings" class="btn btn-primary">
              <i class="bi bi-link me-2"></i>Link a Child
            </a>
          </div>
        </div>
      </div>
      <% } else { %>
      <% children.forEach(child => { %>
      <div class="col-md-4 mb-3">
        <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent/child/<%= child.id %>" class="text-decoration-none">
          <div class="card child-card h-100">
            <div class="card-body d-flex align-items-center">
              <div class="avatar me-3">
                <%= child.firstName.charAt(0) %><%= child.lastName.charAt(0) %>
              </div>
              <div>
                <h5 class="mb-1 text-dark"><%= child.firstName %> <%= child.lastName %></h5>
                <span class="badge bg-primary"><%= child.gradeLevel ? 'Grade ' + child.gradeLevel : 'Not Set' %></span>
                <% if (child.school) { %>
                <small class="d-block text-muted mt-1"><i class="bi bi-building me-1"></i><%= child.school.name %></small>
                <% } %>
              </div>
            </div>
          </div>
        </a>
      </div>
      <% }); %>
      <% } %>
    </div>

    <div class="row">
      <!-- Recent Sessions -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Recent Learning Sessions</h6>
          </div>
          <div class="card-body p-0">
            <% if (recentSessions.length === 0) { %>
            <p class="text-muted text-center py-4">No sessions yet</p>
            <% } else { %>
            <ul class="list-group list-group-flush">
              <% recentSessions.forEach(session => { %>
              <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <strong><%= session.student.firstName %></strong>
                    <span class="text-muted">studied</span>
                    <span class="badge bg-light text-dark"><%= session.topic?.name || session.subject?.name %></span>
                  </div>
                  <small class="text-muted">
                    <%= new Date(session.startedAt).toLocaleDateString() %>
                  </small>
                </div>
                <small class="text-muted">
                  <i class="bi bi-clock me-1"></i>
                  <%= Math.round((session.duration || 0) / 60) %> min
                </small>
              </li>
              <% }); %>
            </ul>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Progress Overview -->
      <div class="col-lg-6 mb-4">
        <div class="card h-100">
          <div class="card-header">
            <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Progress Overview</h6>
          </div>
          <div class="card-body p-0">
            <% if (progressSummary.length === 0) { %>
            <p class="text-muted text-center py-4">No progress data yet</p>
            <% } else { %>
            <ul class="list-group list-group-flush">
              <% progressSummary.forEach(progress => { %>
              <li class="list-group-item">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= progress.student.firstName %></strong>
                    <span class="text-muted">-</span>
                    <%= progress.topic.name %>
                  </div>
                  <span class="badge mastery-<%= progress.masteryLevel %> text-white">
                    Level <%= progress.masteryLevel %>
                  </span>
                </div>
                <div class="progress mt-2" style="height: 4px;">
                  <div class="progress-bar" style="width: <%= progress.masteryLevel * 20 %>%; background: <%= branding.primaryColor %>"></div>
                </div>
              </li>
              <% }); %>
            </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <div class="row text-center">
              <div class="col-md-3">
                <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent/consent" class="text-decoration-none">
                  <i class="bi bi-shield-check fs-2 text-success"></i>
                  <p class="mb-0 mt-2">Consent Management</p>
                </a>
              </div>
              <div class="col-md-3">
                <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/parent/settings" class="text-decoration-none">
                  <i class="bi bi-gear fs-2 text-primary"></i>
                  <p class="mb-0 mt-2">Settings</p>
                </a>
              </div>
              <div class="col-md-3">
                <a href="#" class="text-decoration-none">
                  <i class="bi bi-envelope fs-2 text-info"></i>
                  <p class="mb-0 mt-2">Messages</p>
                </a>
              </div>
              <div class="col-md-3">
                <a href="#" class="text-decoration-none">
                  <i class="bi bi-question-circle fs-2 text-warning"></i>
                  <p class="mb-0 mt-2">Help & Support</p>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
