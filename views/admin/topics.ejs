<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar { min-height: 100vh; max-height: 100vh; overflow-y: auto; position: sticky; top: 0; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .card { border: none; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); }
    .topic-row { transition: background-color 0.15s; }
    .topic-row:hover { background-color: #f0f9ff; }
    .difficulty-1 { color: #22c55e; }
    .difficulty-2 { color: #84cc16; }
    .difficulty-3 { color: #eab308; }
    .difficulty-4 { color: #f97316; }
    .difficulty-5 { color: #ef4444; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'subjects', branding, basePath }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-3">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="<%= basePath %>/admin?token=<%= token %>">Admin</a></li>
            <li class="breadcrumb-item"><a href="<%= basePath %>/admin/subjects?token=<%= token %>">Subjects</a></li>
            <li class="breadcrumb-item"><a href="<%= basePath %>/admin/subjects/<%= subject.id %>/edit?token=<%= token %>"><%= subject.name %></a></li>
            <li class="breadcrumb-item active">Topics</li>
          </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h2><i class="bi bi-list-check text-primary me-2"></i>Topics for <%= subject.name %></h2>
            <p class="text-muted mb-0">
              <span class="badge bg-primary me-1"><%= subject.category?.icon || '' %> <%= subject.category?.name %></span>
              <% if (subject.gradeRange) { %>
              <span class="badge bg-secondary">Grade <%= subject.gradeRange %></span>
              <% } %>
            </p>
          </div>
          <div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTopicModal">
              <i class="bi bi-plus-lg me-1"></i>Add Topic
            </button>
            <a href="<%= basePath %>/admin/subjects?token=<%= token %>" class="btn btn-outline-secondary ms-2">
              <i class="bi bi-arrow-left me-1"></i>Back to Subjects
            </a>
          </div>
        </div>

        <!-- Stats Row -->
        <div class="row g-3 mb-4">
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-list-check text-primary fs-1"></i>
                <h3 class="mt-2"><%= subject.topics.length %></h3>
                <small class="text-muted">Total Topics</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-check-circle text-success fs-1"></i>
                <h3 class="mt-2"><%= subject.topics.filter(t => t.isActive).length %></h3>
                <small class="text-muted">Active</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-x-circle text-secondary fs-1"></i>
                <h3 class="mt-2"><%= subject.topics.filter(t => !t.isActive).length %></h3>
                <small class="text-muted">Inactive</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-bar-chart text-info fs-1"></i>
                <h3 class="mt-2"><%= subject.topics.length > 0 ? (subject.topics.reduce((sum, t) => sum + t.difficulty, 0) / subject.topics.length).toFixed(1) : 0 %></h3>
                <small class="text-muted">Avg Difficulty</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Topics Table -->
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-table me-2"></i>Topics List</h5>
            <small class="text-muted"><%= subject.topics.length %> topics</small>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th style="width: 60px;">Order</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Grade</th>
                    <th>Difficulty</th>
                    <th>Status</th>
                    <th>Updated</th>
                    <th style="width: 120px;">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (subject.topics.length > 0) { %>
                    <% subject.topics.forEach(topic => { %>
                      <tr class="topic-row">
                        <td class="text-center"><span class="badge bg-secondary"><%= topic.order %></span></td>
                        <td><code><%= topic.code %></code></td>
                        <td>
                          <strong><%= topic.name %></strong>
                          <% if (topic.description) { %>
                          <br><small class="text-muted"><%= topic.description.substring(0, 60) %><%= topic.description.length > 60 ? '...' : '' %></small>
                          <% } %>
                        </td>
                        <td>
                          <% if (topic.gradeLevel !== null && topic.gradeLevel !== undefined) { %>
                          <span class="badge bg-info"><%= topic.gradeLevel === 0 ? 'K' : topic.gradeLevel %></span>
                          <% } else { %>
                          <span class="text-muted">-</span>
                          <% } %>
                        </td>
                        <td>
                          <span class="difficulty-<%= Math.min(topic.difficulty, 5) %>">
                            <% for (let i = 0; i < topic.difficulty; i++) { %>
                              <i class="bi bi-star-fill"></i>
                            <% } %>
                            <% for (let i = topic.difficulty; i < 5; i++) { %>
                              <i class="bi bi-star"></i>
                            <% } %>
                          </span>
                          <small class="text-muted ms-1">(<%= topic.difficulty %>)</small>
                        </td>
                        <td>
                          <% if (topic.isActive) { %>
                            <span class="badge bg-success">Active</span>
                          <% } else { %>
                            <span class="badge bg-secondary">Inactive</span>
                          <% } %>
                        </td>
                        <td><small class="text-muted"><%= new Date(topic.updatedAt).toLocaleDateString() %></small></td>
                        <td>
                          <a href="<%= basePath %>/admin/topics/<%= topic.id %>/edit?token=<%= token %>" class="btn btn-sm btn-outline-primary" title="Edit Topic">
                            <i class="bi bi-pencil"></i>
                          </a>
                          <form action="<%= basePath %>/admin/topics/<%= topic.id %>/delete?token=<%= token %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this topic? This cannot be undone.');">
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Topic">
                              <i class="bi bi-trash"></i>
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="8" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                        <h5>No Topics Yet</h5>
                        <p>Create your first topic for this subject.</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTopicModal">
                          <i class="bi bi-plus-lg me-1"></i>Add Topic
                        </button>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Topic Modal -->
  <div class="modal fade" id="addTopicModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form action="<%= basePath %>/admin/subjects/<%= subject.id %>/topics?token=<%= token %>" method="POST">
          <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Topic to <%= subject.name %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Code <span class="text-danger">*</span></label>
                <input type="text" name="code" class="form-control font-monospace" placeholder="e.g., MATH-K-COUNT" required pattern="[A-Za-z0-9_-]+" title="Letters, numbers, underscores, and hyphens only">
                <small class="text-muted">Unique identifier</small>
              </div>
              <div class="col-md-6">
                <label class="form-label">Name <span class="text-danger">*</span></label>
                <input type="text" name="name" class="form-control" placeholder="e.g., Counting 1-10" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Grade Level</label>
                <select name="gradeLevel" class="form-select">
                  <option value="">Not specified</option>
                  <option value="-2">Pre-K 3</option>
                  <option value="-1">Pre-K 4</option>
                  <option value="0">Kindergarten</option>
                  <% for (let g = 1; g <= 12; g++) { %>
                  <option value="<%= g %>">Grade <%= g %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Difficulty (1-5)</label>
                <select name="difficulty" class="form-select">
                  <option value="1">1 - Very Easy</option>
                  <option value="2">2 - Easy</option>
                  <option value="3" selected>3 - Medium</option>
                  <option value="4">4 - Hard</option>
                  <option value="5">5 - Very Hard</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">Order</label>
                <input type="number" name="order" class="form-control" value="<%= subject.topics.length %>" min="0">
                <small class="text-muted">Display order</small>
              </div>
              <div class="col-12">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" rows="3" placeholder="What does this topic cover? What will students learn?"></textarea>
              </div>
              <div class="col-12">
                <div class="form-check form-switch">
                  <input type="checkbox" name="isActive" class="form-check-input" id="newTopicActive" checked>
                  <label class="form-check-label" for="newTopicActive">Active</label>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Create Topic</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Parse query string for error messages
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    if (error) {
      const alertDiv = document.createElement('div');
      alertDiv.className = 'alert alert-danger alert-dismissible fade show';
      alertDiv.role = 'alert';
      alertDiv.innerHTML = `<i class="bi bi-exclamation-triangle me-2"></i>${error}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
      document.querySelector('.main-content').prepend(alertDiv);
      // Clean URL
      window.history.replaceState({}, '', window.location.pathname + '?token=' + urlParams.get('token'));
    }
  </script>
</body>
</html>
