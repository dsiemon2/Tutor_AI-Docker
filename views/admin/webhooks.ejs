<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebHooks - TutorAI Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar { min-height: 100vh; max-height: 100vh; overflow-y: auto; position: sticky; top: 0; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .card { border: none; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'webhooks', branding, basePath }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-link-45deg text-primary me-2"></i>Webhooks</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addWebhookModal">
            <i class="bi bi-plus-lg me-1"></i>Add Webhook
          </button>
        </div>

        <p class="text-muted mb-4">Configure webhooks to send event notifications to external services.</p>

        <!-- Stats Row -->
        <div class="row g-3 mb-4">
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-link-45deg text-primary fs-1"></i>
                <h3 class="mt-2"><%= webhooks ? webhooks.length : 0 %></h3>
                <small class="text-muted">Total Webhooks</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-check-circle text-success fs-1"></i>
                <h3 class="mt-2"><%= webhooks ? webhooks.filter(w => w.isActive).length : 0 %></h3>
                <small class="text-muted">Active</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-x-circle text-secondary fs-1"></i>
                <h3 class="mt-2"><%= webhooks ? webhooks.filter(w => !w.isActive).length : 0 %></h3>
                <small class="text-muted">Inactive</small>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Name</th>
                    <th>URL</th>
                    <th>Events</th>
                    <th>Status</th>
                    <th>Last Triggered</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (webhooks && webhooks.length > 0) { %>
                    <% webhooks.forEach(webhook => { %>
                      <%
                        let events = [];
                        try { events = JSON.parse(webhook.events); } catch(e) {}
                      %>
                      <tr>
                        <td><strong><%= webhook.name %></strong></td>
                        <td><code class="text-muted" style="font-size: 0.75rem;"><%= webhook.url.length > 40 ? webhook.url.substring(0, 40) + '...' : webhook.url %></code></td>
                        <td>
                          <% events.slice(0, 2).forEach(event => { %>
                            <span class="badge bg-info me-1"><%= event %></span>
                          <% }) %>
                          <% if (events.length > 2) { %>
                            <span class="badge bg-secondary">+<%= events.length - 2 %></span>
                          <% } %>
                        </td>
                        <td>
                          <% if (webhook.isActive) { %>
                            <span class="badge bg-success">Active</span>
                          <% } else { %>
                            <span class="badge bg-secondary">Inactive</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (webhook.lastTriggeredAt) { %>
                            <%= new Date(webhook.lastTriggeredAt).toLocaleString() %>
                          <% } else { %>
                            <span class="text-muted">Never</span>
                          <% } %>
                        </td>
                        <td>
                          <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editWebhookModal<%= webhook.id %>"><i class="bi bi-pencil"></i></button>
                          <button class="btn btn-sm btn-outline-secondary" onclick="testWebhook('<%= webhook.id %>')"><i class="bi bi-arrow-repeat"></i></button>
                          <form action="<%= basePath %>/admin/webhooks/<%= webhook.id %>/delete?token=<%= token %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this webhook?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center py-4 text-muted">
                        <i class="bi bi-link-45deg fs-1 d-block mb-2"></i>
                        No webhooks configured. Click "Add Webhook" to create your first one.
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Available Events -->
        <div class="card mt-4">
          <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Available Events</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <h6>Session Events</h6>
                <ul class="list-unstyled text-muted">
                  <li><code>session.started</code></li>
                  <li><code>session.ended</code></li>
                  <li><code>session.paused</code></li>
                </ul>
              </div>
              <div class="col-md-4">
                <h6>Progress Events</h6>
                <ul class="list-unstyled text-muted">
                  <li><code>progress.updated</code></li>
                  <li><code>progress.report</code></li>
                  <li><code>mastery.achieved</code></li>
                </ul>
              </div>
              <div class="col-md-4">
                <h6>Achievement Events</h6>
                <ul class="list-unstyled text-muted">
                  <li><code>achievement.unlocked</code></li>
                  <li><code>streak.maintained</code></li>
                  <li><code>topic.completed</code></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Webhook Modal -->
  <div class="modal fade" id="addWebhookModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="<%= basePath %>/admin/webhooks?token=<%= token %>" method="POST">
          <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Webhook</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label class="form-label">Name <span class="text-danger">*</span></label>
              <input type="text" name="name" class="form-control" placeholder="e.g., LMS Integration" required>
            </div>
            <div class="mb-3">
              <label class="form-label">URL <span class="text-danger">*</span></label>
              <input type="url" name="url" class="form-control" placeholder="https://example.com/webhook" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Events <span class="text-danger">*</span></label>
              <select name="events" class="form-select" multiple size="6" required>
                <option value="session.started">session.started</option>
                <option value="session.ended">session.ended</option>
                <option value="session.paused">session.paused</option>
                <option value="progress.updated">progress.updated</option>
                <option value="progress.report">progress.report</option>
                <option value="mastery.achieved">mastery.achieved</option>
                <option value="achievement.unlocked">achievement.unlocked</option>
                <option value="streak.maintained">streak.maintained</option>
                <option value="topic.completed">topic.completed</option>
              </select>
              <small class="text-muted">Hold Ctrl/Cmd to select multiple events</small>
            </div>
            <div class="mb-3">
              <label class="form-label">Secret Key (optional)</label>
              <input type="text" name="secret" class="form-control" placeholder="For request signing">
              <small class="text-muted">Used to sign webhook payloads for security</small>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Webhook</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Modals for each webhook -->
  <% if (webhooks) { %>
    <% webhooks.forEach(webhook => { %>
      <%
        let webhookEvents = [];
        try { webhookEvents = JSON.parse(webhook.events); } catch(e) {}
      %>
      <div class="modal fade" id="editWebhookModal<%= webhook.id %>" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <form action="<%= basePath %>/admin/webhooks/<%= webhook.id %>?token=<%= token %>" method="POST">
              <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Webhook</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <div class="mb-3">
                  <label class="form-label">Name <span class="text-danger">*</span></label>
                  <input type="text" name="name" class="form-control" value="<%= webhook.name %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">URL <span class="text-danger">*</span></label>
                  <input type="url" name="url" class="form-control" value="<%= webhook.url %>" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Events <span class="text-danger">*</span></label>
                  <select name="events" class="form-select" multiple size="6" required>
                    <option value="session.started" <%= webhookEvents.includes('session.started') ? 'selected' : '' %>>session.started</option>
                    <option value="session.ended" <%= webhookEvents.includes('session.ended') ? 'selected' : '' %>>session.ended</option>
                    <option value="session.paused" <%= webhookEvents.includes('session.paused') ? 'selected' : '' %>>session.paused</option>
                    <option value="progress.updated" <%= webhookEvents.includes('progress.updated') ? 'selected' : '' %>>progress.updated</option>
                    <option value="progress.report" <%= webhookEvents.includes('progress.report') ? 'selected' : '' %>>progress.report</option>
                    <option value="mastery.achieved" <%= webhookEvents.includes('mastery.achieved') ? 'selected' : '' %>>mastery.achieved</option>
                    <option value="achievement.unlocked" <%= webhookEvents.includes('achievement.unlocked') ? 'selected' : '' %>>achievement.unlocked</option>
                    <option value="streak.maintained" <%= webhookEvents.includes('streak.maintained') ? 'selected' : '' %>>streak.maintained</option>
                    <option value="topic.completed" <%= webhookEvents.includes('topic.completed') ? 'selected' : '' %>>topic.completed</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label class="form-label">Secret Key</label>
                  <input type="text" name="secret" class="form-control" value="<%= webhook.secret || '' %>">
                </div>
                <div class="mb-3">
                  <div class="form-check form-switch">
                    <input type="checkbox" name="isActive" class="form-check-input" id="active<%= webhook.id %>" <%= webhook.isActive ? 'checked' : '' %>>
                    <label class="form-check-label" for="active<%= webhook.id %>">Active</label>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const basePath = '<%= basePath %>';
    const token = '<%= token %>';

    async function testWebhook(id) {
      try {
        const response = await fetch(`${basePath}/admin/webhooks/${id}/test?token=${token}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        const result = await response.json();
        alert(result.success ? 'Test successful: ' + result.message : 'Test failed: ' + result.message);
        if (result.success) {
          location.reload();
        }
      } catch (error) {
        alert('Test failed: ' + error.message);
      }
    }
  </script>
</body>
</html>
