<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Functions - TutorAI Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar { min-height: 100vh; max-height: 100vh; overflow-y: auto; position: sticky; top: 0; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .card { border: none; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); }
    .code-editor { font-family: 'Monaco', 'Consolas', monospace; font-size: 0.875rem; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'functions', branding, basePath }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-code-slash text-primary me-2"></i>AI Functions</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addFunctionModal">
            <i class="bi bi-plus-lg me-1"></i>Add Function
          </button>
        </div>

        <p class="text-muted mb-4">Define custom functions that the AI tutor can execute during sessions.</p>

        <!-- Stats Row -->
        <div class="row g-3 mb-4">
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-code-slash text-primary fs-1"></i>
                <h3 class="mt-2"><%= functions ? functions.length : 0 %></h3>
                <small class="text-muted">Total Functions</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-check-circle text-success fs-1"></i>
                <h3 class="mt-2"><%= functions ? functions.filter(f => f.isActive).length : 0 %></h3>
                <small class="text-muted">Active Functions</small>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-pause-circle text-secondary fs-1"></i>
                <h3 class="mt-2"><%= functions ? functions.filter(f => !f.isActive).length : 0 %></h3>
                <small class="text-muted">Inactive Functions</small>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Functions</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Function Name</th>
                    <th>Description</th>
                    <th>Trigger</th>
                    <th>Status</th>
                    <th>Updated</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (functions && functions.length > 0) { %>
                    <% functions.forEach(func => { %>
                      <tr>
                        <td><code><%= func.name %></code></td>
                        <td><small class="text-muted"><%= func.description ? (func.description.length > 50 ? func.description.substring(0, 50) + '...' : func.description) : 'No description' %></small></td>
                        <td>
                          <span class="badge bg-<%= func.triggerType === 'manual' ? 'info' : (func.triggerType === 'scheduled' ? 'warning' : (func.triggerType === 'event' ? 'danger' : 'success')) %>">
                            <%= func.triggerType === 'manual' ? 'On Request' : (func.triggerType === 'scheduled' ? 'Scheduled' : (func.triggerType === 'event' ? 'On Event' : 'Automatic')) %>
                          </span>
                        </td>
                        <td>
                          <% if (func.isActive) { %>
                            <span class="badge bg-success">Active</span>
                          <% } else { %>
                            <span class="badge bg-secondary">Inactive</span>
                          <% } %>
                        </td>
                        <td><%= new Date(func.updatedAt).toLocaleDateString() %></td>
                        <td>
                          <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editFunctionModal<%= func.id %>"><i class="bi bi-pencil"></i></button>
                          <form action="<%= basePath %>/admin/functions/<%= func.id %>/delete?token=<%= token %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this function?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center py-4 text-muted">
                        <i class="bi bi-code-slash fs-1 d-block mb-2"></i>
                        No functions yet. Click "Add Function" to create your first one.
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Function Types -->
        <div class="row mt-4 g-3">
          <div class="col-md-3">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="bi bi-hand-index text-info fs-1"></i>
                <h6 class="mt-3">On Request</h6>
                <p class="text-muted small mb-0">Called when the AI or user explicitly requests the function.</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="bi bi-clock text-warning fs-1"></i>
                <h6 class="mt-3">Scheduled</h6>
                <p class="text-muted small mb-0">Runs automatically at specified times.</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="bi bi-lightning text-danger fs-1"></i>
                <h6 class="mt-3">On Event</h6>
                <p class="text-muted small mb-0">Triggered by specific events like session end.</p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card h-100">
              <div class="card-body text-center">
                <i class="bi bi-gear text-success fs-1"></i>
                <h6 class="mt-3">Automatic</h6>
                <p class="text-muted small mb-0">Runs automatically based on conditions.</p>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Function Modal -->
  <div class="modal fade" id="addFunctionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form action="<%= basePath %>/admin/functions?token=<%= token %>" method="POST">
          <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Function</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">Function Name <span class="text-danger">*</span></label>
                <input type="text" name="name" class="form-control code-editor" placeholder="myFunction" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">Trigger Type</label>
                <select name="triggerType" class="form-select">
                  <option value="manual">On Request</option>
                  <option value="scheduled">Scheduled</option>
                  <option value="event">On Event</option>
                  <option value="automatic">Automatic</option>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">Description</label>
                <input type="text" name="description" class="form-control" placeholder="What does this function do?">
              </div>
              <div class="col-12">
                <label class="form-label">Parameters (JSON Schema)</label>
                <textarea name="parameters" class="form-control code-editor" rows="8" placeholder='{"type": "object", "properties": {"topic": {"type": "string"}, "count": {"type": "integer"}}}'></textarea>
                <small class="text-muted">Define the function parameters using JSON Schema format</small>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Function</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Modals for each function -->
  <% if (functions) { %>
    <% functions.forEach(func => { %>
      <div class="modal fade" id="editFunctionModal<%= func.id %>" tabindex="-1">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form action="<%= basePath %>/admin/functions/<%= func.id %>?token=<%= token %>" method="POST">
              <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Function</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <div class="row g-3">
                  <div class="col-md-6">
                    <label class="form-label">Function Name <span class="text-danger">*</span></label>
                    <input type="text" name="name" class="form-control code-editor" value="<%= func.name %>" required>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Trigger Type</label>
                    <select name="triggerType" class="form-select">
                      <option value="manual" <%= func.triggerType === 'manual' ? 'selected' : '' %>>On Request</option>
                      <option value="scheduled" <%= func.triggerType === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                      <option value="event" <%= func.triggerType === 'event' ? 'selected' : '' %>>On Event</option>
                      <option value="automatic" <%= func.triggerType === 'automatic' ? 'selected' : '' %>>Automatic</option>
                    </select>
                  </div>
                  <div class="col-md-8">
                    <label class="form-label">Description</label>
                    <input type="text" name="description" class="form-control" value="<%= func.description || '' %>">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <div class="form-check form-switch mt-2">
                      <input type="checkbox" name="isActive" class="form-check-input" id="active<%= func.id %>" <%= func.isActive ? 'checked' : '' %>>
                      <label class="form-check-label" for="active<%= func.id %>">Active</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <label class="form-label">Parameters (JSON Schema)</label>
                    <textarea name="parameters" class="form-control code-editor" rows="8"><%= func.parameters || '' %></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
