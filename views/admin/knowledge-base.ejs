<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Knowledge Base - TutorAI Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .sidebar { min-height: 100vh; max-height: 100vh; overflow-y: auto; position: sticky; top: 0; }
    .sidebar .nav-link { color: rgba(255,255,255,0.8); padding: 0.75rem 1rem; }
    .sidebar .nav-link:hover, .sidebar .nav-link.active { color: #fff; background: rgba(255,255,255,0.1); }
    .sidebar .nav-link i { margin-right: 0.5rem; }
    .main-content { background: #f8f9fa; min-height: 100vh; }
    .nav-divider { border-top: 1px solid rgba(255,255,255,0.2); margin: 0.5rem 0; }
    .nav-section { color: rgba(255,255,255,0.5); font-size: 0.75rem; padding: 0.5rem 1rem; text-transform: uppercase; }
    .card { border: none; box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075); }
    .content-preview { max-height: 100px; overflow: hidden; text-overflow: ellipsis; }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <%- include('_sidebar', { token, active: 'knowledge-base', branding, basePath }) %>

      <main class="col-md-10 ms-sm-auto main-content p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2><i class="bi bi-journal-text text-primary me-2"></i>Knowledge Base</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addDocModal">
            <i class="bi bi-plus-lg me-1"></i>Add Document
          </button>
        </div>

        <p class="text-muted mb-4">Manage educational content and reference materials for the AI tutor.</p>

        <!-- Stats Row -->
        <div class="row g-3 mb-4">
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-file-text text-primary fs-1"></i>
                <h3 class="mt-2"><%= documents ? documents.length : 0 %></h3>
                <small class="text-muted">Total Documents</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-check-circle text-success fs-1"></i>
                <h3 class="mt-2"><%= documents ? documents.filter(d => d.isActive).length : 0 %></h3>
                <small class="text-muted">Active</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-bookmark text-info fs-1"></i>
                <h3 class="mt-2"><%= documents ? [...new Set(documents.map(d => d.category))].length : 0 %></h3>
                <small class="text-muted">Categories</small>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <i class="bi bi-x-circle text-secondary fs-1"></i>
                <h3 class="mt-2"><%= documents ? documents.filter(d => !d.isActive).length : 0 %></h3>
                <small class="text-muted">Inactive</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Documents Table -->
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Documents</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Content Preview</th>
                    <th>Status</th>
                    <th>Updated</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (documents && documents.length > 0) { %>
                    <% documents.forEach(doc => { %>
                      <tr>
                        <td><i class="bi bi-file-text text-primary me-2"></i><%= doc.title %></td>
                        <td><span class="badge bg-<%= doc.category === 'general' ? 'secondary' : (doc.category === 'reference' ? 'primary' : (doc.category === 'tutorial' ? 'success' : 'info')) %>"><%= doc.category %></span></td>
                        <td class="content-preview" style="max-width: 300px;"><small class="text-muted"><%= doc.content.substring(0, 100) %><%= doc.content.length > 100 ? '...' : '' %></small></td>
                        <td>
                          <% if (doc.isActive) { %>
                            <span class="badge bg-success">Active</span>
                          <% } else { %>
                            <span class="badge bg-secondary">Inactive</span>
                          <% } %>
                        </td>
                        <td><%= new Date(doc.updatedAt).toLocaleDateString() %></td>
                        <td>
                          <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editDocModal<%= doc.id %>"><i class="bi bi-pencil"></i></button>
                          <form action="<%= basePath %>/admin/knowledge-base/<%= doc.id %>/delete?token=<%= token %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this document?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-center py-4 text-muted">
                        <i class="bi bi-journal-x fs-1 d-block mb-2"></i>
                        No documents yet. Click "Add Document" to create your first one.
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Add Document Modal -->
  <div class="modal fade" id="addDocModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form action="<%= basePath %>/admin/knowledge-base?token=<%= token %>" method="POST">
          <div class="modal-header">
            <h5 class="modal-title"><i class="bi bi-plus-lg me-2"></i>Add Document</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="row g-3">
              <div class="col-md-8">
                <label class="form-label">Title <span class="text-danger">*</span></label>
                <input type="text" name="title" class="form-control" placeholder="Document title" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">Category</label>
                <select name="category" class="form-select">
                  <option value="general">General</option>
                  <option value="reference">Reference</option>
                  <option value="tutorial">Tutorial</option>
                  <option value="guide">Guide</option>
                  <option value="exercise">Exercise</option>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">Tags (comma-separated)</label>
                <input type="text" name="tags" class="form-control" placeholder="e.g., algebra, equations, math">
              </div>
              <div class="col-12">
                <label class="form-label">Content <span class="text-danger">*</span></label>
                <textarea name="content" class="form-control" rows="10" placeholder="Enter document content or paste educational material..." required></textarea>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Document</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Modals for each document -->
  <% if (documents) { %>
    <% documents.forEach(doc => { %>
      <div class="modal fade" id="editDocModal<%= doc.id %>" tabindex="-1">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form action="<%= basePath %>/admin/knowledge-base/<%= doc.id %>?token=<%= token %>" method="POST">
              <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Edit Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <div class="row g-3">
                  <div class="col-md-8">
                    <label class="form-label">Title <span class="text-danger">*</span></label>
                    <input type="text" name="title" class="form-control" value="<%= doc.title %>" required>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Category</label>
                    <select name="category" class="form-select">
                      <option value="general" <%= doc.category === 'general' ? 'selected' : '' %>>General</option>
                      <option value="reference" <%= doc.category === 'reference' ? 'selected' : '' %>>Reference</option>
                      <option value="tutorial" <%= doc.category === 'tutorial' ? 'selected' : '' %>>Tutorial</option>
                      <option value="guide" <%= doc.category === 'guide' ? 'selected' : '' %>>Guide</option>
                      <option value="exercise" <%= doc.category === 'exercise' ? 'selected' : '' %>>Exercise</option>
                    </select>
                  </div>
                  <div class="col-md-8">
                    <label class="form-label">Tags (comma-separated)</label>
                    <input type="text" name="tags" class="form-control" value="<%= doc.tags || '' %>">
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <div class="form-check form-switch mt-2">
                      <input type="checkbox" name="isActive" class="form-check-input" id="active<%= doc.id %>" <%= doc.isActive ? 'checked' : '' %>>
                      <label class="form-check-label" for="active<%= doc.id %>">Active</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <label class="form-label">Content <span class="text-danger">*</span></label>
                    <textarea name="content" class="form-control" rows="10" required><%= doc.content %></textarea>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
