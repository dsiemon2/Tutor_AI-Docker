<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary-color: <%= branding.primaryColor || '#0ea5e9' %>;
      --secondary-color: <%= branding.secondaryColor || '#0284c7' %>;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .auth-container { width: 100%; max-width: 500px; }

    .auth-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
      overflow: hidden;
    }

    .auth-header {
      padding: 2.5rem 2rem 2rem;
      text-align: center;
      border-bottom: 1px solid #e2e8f0;
    }

    .auth-header .logo { font-size: 4rem; color: var(--primary-color); margin-bottom: 1rem; }
    .auth-header h1 { font-size: 1.75rem; font-weight: 700; color: #1e293b; margin: 0; }
    .auth-header p { color: #64748b; margin: 0.5rem 0 0; font-size: 1rem; }

    .auth-body { padding: 2rem; }

    .email-display {
      background: #f0f9ff;
      border: 1px solid #bae6fd;
      border-radius: 10px;
      padding: 1rem 1.5rem;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .email-display .email {
      font-weight: 600;
      color: var(--primary-color);
      font-size: 1.1rem;
      word-break: break-all;
    }

    .steps {
      background: #f8fafc;
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 1.5rem;
    }

    .step {
      display: flex;
      align-items: flex-start;
      margin-bottom: 1rem;
    }

    .step:last-child { margin-bottom: 0; }

    .step-icon {
      width: 32px;
      height: 32px;
      background: var(--primary-color);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      margin-right: 1rem;
      flex-shrink: 0;
    }

    .step-content h6 { margin: 0 0 0.25rem; font-weight: 600; color: #1e293b; }
    .step-content p { margin: 0; color: #64748b; font-size: 0.875rem; }

    .btn-primary {
      background: var(--primary-color);
      border-color: var(--primary-color);
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      border-radius: 8px;
    }

    .btn-primary:hover {
      background: var(--secondary-color);
      border-color: var(--secondary-color);
    }

    .auth-footer {
      padding: 1.5rem 2rem;
      background: #f8fafc;
      text-align: center;
      border-top: 1px solid #e2e8f0;
    }

    .auth-footer a { color: var(--primary-color); text-decoration: none; font-weight: 500; }
    .auth-footer a:hover { text-decoration: underline; }

    .resend-section { margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e2e8f0; }
    .resend-section p { color: #64748b; font-size: 0.875rem; margin-bottom: 0.5rem; }

    #resendBtn { font-size: 0.875rem; }
    #resendBtn:disabled { opacity: 0.5; }
    #resendStatus { font-size: 0.875rem; margin-top: 0.5rem; }
  </style>
</head>
<body>
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <div class="logo"><i class="bi bi-envelope-check"></i></div>
        <h1>Check Your Email</h1>
        <p>We've sent you a verification link</p>
      </div>

      <div class="auth-body">
        <div class="email-display">
          <span class="email"><%= email %></span>
        </div>

        <div class="steps">
          <div class="step">
            <div class="step-icon">1</div>
            <div class="step-content">
              <h6>Check your inbox</h6>
              <p>Look for an email from TutorAI</p>
            </div>
          </div>
          <div class="step">
            <div class="step-icon">2</div>
            <div class="step-content">
              <h6>Click the verification link</h6>
              <p>This confirms your email address</p>
            </div>
          </div>
          <div class="step">
            <div class="step-icon">3</div>
            <div class="step-content">
              <h6>Start learning!</h6>
              <p>Access all TutorAI features</p>
            </div>
          </div>
        </div>

        <div class="alert alert-info mb-0">
          <i class="bi bi-info-circle me-2"></i>
          <strong>Didn't receive it?</strong> Check your spam folder or click below to resend.
        </div>

        <div class="resend-section text-center">
          <p>Still can't find it?</p>
          <button type="button" id="resendBtn" class="btn btn-outline-primary btn-sm" onclick="resendVerification()">
            <i class="bi bi-arrow-clockwise me-1"></i>Resend Verification Email
          </button>
          <div id="resendStatus"></div>
        </div>
      </div>

      <div class="auth-footer">
        Already verified? <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/auth/login">Sign in</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let cooldown = false;

    async function resendVerification() {
      if (cooldown) return;

      const btn = document.getElementById('resendBtn');
      const status = document.getElementById('resendStatus');

      btn.disabled = true;
      btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Sending...';

      try {
        const response = await fetch('<%= typeof basePath !== "undefined" ? basePath : "" %>/auth/resend-verification', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: '<%= email %>' })
        });

        const data = await response.json();

        if (data.success) {
          status.innerHTML = '<span class="text-success"><i class="bi bi-check-circle me-1"></i>Email sent! Check your inbox.</span>';
          cooldown = true;

          // Start 60 second cooldown
          let seconds = 60;
          const interval = setInterval(() => {
            seconds--;
            btn.innerHTML = `<i class="bi bi-clock me-1"></i>Wait ${seconds}s`;
            if (seconds <= 0) {
              clearInterval(interval);
              cooldown = false;
              btn.disabled = false;
              btn.innerHTML = '<i class="bi bi-arrow-clockwise me-1"></i>Resend Verification Email';
              status.innerHTML = '';
            }
          }, 1000);
        } else {
          status.innerHTML = '<span class="text-danger"><i class="bi bi-x-circle me-1"></i>' + (data.error || 'Failed to send') + '</span>';
          btn.disabled = false;
          btn.innerHTML = '<i class="bi bi-arrow-clockwise me-1"></i>Resend Verification Email';
        }
      } catch (error) {
        status.innerHTML = '<span class="text-danger"><i class="bi bi-x-circle me-1"></i>An error occurred</span>';
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-arrow-clockwise me-1"></i>Resend Verification Email';
      }
    }
  </script>
</body>
</html>
