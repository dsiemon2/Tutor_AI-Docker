<%- include('../layouts/teacher', { body: `
<nav aria-label="breadcrumb" class="mb-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="${typeof basePath !== 'undefined' ? basePath : ''}/teacher/classes">Classes</a></li>
    <li class="breadcrumb-item active">${cls.name}</li>
  </ol>
</nav>

<div class="card mb-4">
  <div class="card-body">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h4 class="mb-2">${cls.name}</h4>
        <p class="text-muted mb-0">
          <span class="badge bg-primary me-2">${cls.subject?.name || 'General'}</span>
          <span>${cls.students?.length || 0} students enrolled</span>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Students</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Recent Sessions</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          ${cls.students && cls.students.length > 0 ? cls.students.map(cs => '<tr><td><strong>' + cs.student.firstName + ' ' + cs.student.lastName + '</strong></td><td class="text-muted">' + cs.student.email + '</td><td>' + (cs.student.tutoringSessionsAsStudent?.length || 0) + '</td><td class="text-end"><a href="' + (typeof basePath !== 'undefined' ? basePath : '') + '/teacher/students/' + cs.student.id + '" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a></td></tr>').join('') : '<tr><td colspan="4" class="text-center py-4 text-muted">No students enrolled</td></tr>'}
        </tbody>
      </table>
    </div>
  </div>
</div>
`, activePage: 'classes', pageTitle: cls.name }) %>
