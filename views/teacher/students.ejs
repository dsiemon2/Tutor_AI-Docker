<%- include('../layouts/teacher', { body: `
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1">My Students</h4>
    <p class="text-muted mb-0">All students in your classes</p>
  </div>
</div>

<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Classes</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          ${students && students.length > 0 ? students.map(student => '<tr><td><strong>' + student.firstName + ' ' + student.lastName + '</strong></td><td class="text-muted">' + student.email + '</td><td>' + (student.classes?.join(', ') || '-') + '</td><td class="text-end"><a href="' + (typeof basePath !== 'undefined' ? basePath : '') + '/teacher/students/' + student.id + '" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a></td></tr>').join('') : '<tr><td colspan="4" class="text-center py-4 text-muted">No students found</td></tr>'}
        </tbody>
      </table>
    </div>
  </div>
</div>
`, activePage: 'students', pageTitle: 'My Students' }) %>
