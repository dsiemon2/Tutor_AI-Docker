<%- include('../layouts/teacher', { body: `
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1">My Classes</h4>
    <p class="text-muted mb-0">Manage your classes and monitor student progress</p>
  </div>
</div>

<div class="row g-4">
  ${classes && classes.length > 0 ? classes.map(cls => '<div class="col-md-6 col-lg-4"><div class="card h-100"><div class="card-body"><h5 class="card-title">' + cls.name + '</h5><p class="text-muted small">' + (cls.subject?.name || 'General') + ' - ' + (cls.subject?.category?.name || '') + '</p><div class="d-flex gap-3 mb-3"><span class="badge bg-primary"><i class="bi bi-people me-1"></i>' + (cls.students?.length || 0) + ' Students</span></div></div><div class="card-footer bg-white"><a href="' + (typeof basePath !== 'undefined' ? basePath : '') + '/teacher/classes/' + cls.id + '" class="btn btn-primary btn-sm"><i class="bi bi-eye me-1"></i>View Class</a></div></div></div>').join('') : '<div class="col-12"><div class="card"><div class="card-body text-center py-5"><i class="bi bi-people fs-1 text-muted d-block mb-3"></i><h5>No Classes Assigned</h5><p class="text-muted">You have not been assigned to any classes yet.</p></div></div></div>'}
</div>
`, activePage: 'classes', pageTitle: 'My Classes' }) %>
