<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    :root { --primary-color: <%= branding.primaryColor || '#0ea5e9' %>; }
    body { font-family: 'Segoe UI', sans-serif; background: linear-gradient(135deg, var(--primary-color), #0284c7); min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 2rem; }
    .pending-card { max-width: 550px; background: white; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.2); text-align: center; padding: 3rem 2rem; }
    .pending-icon { font-size: 5rem; color: #f59e0b; margin-bottom: 1.5rem; animation: pulse 2s infinite; }
    @keyframes pulse { 0%, 100% { transform: scale(1); } 50% { transform: scale(1.1); } }
    .btn-primary { background: var(--primary-color); border-color: var(--primary-color); }
  </style>
</head>
<body>
  <div class="pending-card">
    <div class="pending-icon"><i class="bi bi-hourglass-split"></i></div>
    <h1 class="h3 mb-3">Waiting for Parent Approval</h1>
    <p class="text-muted mb-4">
      We've sent an email to your parent/guardian asking for permission for you to use TutorAI.
      Once they approve, you'll be able to start learning!
    </p>

    <% if (consent) { %>
      <div class="alert alert-info text-start mb-4">
        <strong>Email sent to:</strong> <%= consent.parentEmail.replace(/(.{2}).*@/, '$1***@') %>
        <br>
        <strong>Sent:</strong> <%= consent.requestedAt.toLocaleDateString() %>
      </div>
    <% } %>

    <div class="d-grid gap-2">
      <button type="button" class="btn btn-primary" onclick="resendEmail()" id="resendBtn">
        <i class="bi bi-envelope me-2"></i>Resend Email to Parent
      </button>
      <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/auth/logout" class="btn btn-outline-secondary">
        <i class="bi bi-box-arrow-left me-2"></i>Log Out
      </a>
    </div>

    <div id="resendStatus" class="mt-3"></div>

    <p class="small text-muted mt-4">
      Need help? Ask your parent to check their spam folder, or contact support@tutorai.com
    </p>
  </div>

  <script>
    let cooldown = false;

    async function resendEmail() {
      if (cooldown) return;

      const btn = document.getElementById('resendBtn');
      const status = document.getElementById('resendStatus');

      btn.disabled = true;
      btn.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Sending...';

      try {
        const response = await fetch('<%= typeof basePath !== "undefined" ? basePath : "" %>/coppa/resend', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();

        if (data.success) {
          status.innerHTML = '<div class="alert alert-success"><i class="bi bi-check-circle me-1"></i>Email sent! Ask your parent to check their inbox.</div>';
          cooldown = true;
          setTimeout(() => {
            cooldown = false;
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-envelope me-2"></i>Resend Email to Parent';
          }, 300000); // 5 minute cooldown
        } else {
          status.innerHTML = '<div class="alert alert-warning"><i class="bi bi-exclamation-circle me-1"></i>' + (data.error || 'Please wait before trying again.') + '</div>';
          btn.disabled = false;
          btn.innerHTML = '<i class="bi bi-envelope me-2"></i>Resend Email to Parent';
        }
      } catch (error) {
        status.innerHTML = '<div class="alert alert-danger">An error occurred. Please try again later.</div>';
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-envelope me-2"></i>Resend Email to Parent';
      }
    }
  </script>
</body>
</html>
