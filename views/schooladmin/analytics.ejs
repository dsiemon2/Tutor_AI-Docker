<%- include('../layouts/schooladmin', { body: `
<div class="mb-4">
  <h4 class="mb-0">School Analytics</h4>
  <p class="text-muted">Monitor your school's tutoring activity and student progress</p>
</div>

<!-- Time Range Filter -->
<div class="card mb-4">
  <div class="card-body">
    <div class="row g-3 align-items-center">
      <div class="col-auto">
        <label class="col-form-label">Time Range:</label>
      </div>
      <div class="col-md-3">
        <select class="form-select">
          <option value="7">Last 7 days</option>
          <option value="30" selected>Last 30 days</option>
          <option value="90">Last 90 days</option>
          <option value="365">This Year</option>
        </select>
      </div>
    </div>
  </div>
</div>

<!-- Analytics Cards -->
<div class="row g-4 mb-4">
  <div class="col-md-3">
    <div class="stat-card">
      <div class="stat-label">Total Sessions</div>
      <div class="stat-value">0</div>
      <small class="text-success"><i class="bi bi-arrow-up"></i> 0% from last period</small>
    </div>
  </div>
  <div class="col-md-3">
    <div class="stat-card">
      <div class="stat-label">Active Students</div>
      <div class="stat-value">0</div>
      <small class="text-muted">out of 0 total</small>
    </div>
  </div>
  <div class="col-md-3">
    <div class="stat-card">
      <div class="stat-label">Avg. Session Duration</div>
      <div class="stat-value">0 min</div>
      <small class="text-muted">per session</small>
    </div>
  </div>
  <div class="col-md-3">
    <div class="stat-card">
      <div class="stat-label">Avg. Mastery Score</div>
      <div class="stat-value">0%</div>
      <small class="text-muted">across all topics</small>
    </div>
  </div>
</div>

<div class="row g-4">
  <!-- Sessions Chart -->
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Sessions Over Time</h5>
      </div>
      <div class="card-body">
        <div class="d-flex align-items-center justify-content-center" style="height: 300px;">
          <div class="text-center text-muted">
            <i class="bi bi-bar-chart fs-1 d-block mb-2"></i>
            <p>Chart data coming soon</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Top Subjects -->
  <div class="col-lg-4">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-book me-2"></i>Popular Subjects</h5>
      </div>
      <div class="card-body">
        <div class="text-center text-muted py-4">
          <i class="bi bi-pie-chart fs-1 d-block mb-2"></i>
          <p>No subject data yet</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Student Performance Table -->
<div class="card mt-4">
  <div class="card-header">
    <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>Top Performing Students</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Student</th>
            <th>Sessions</th>
            <th>Topics Covered</th>
            <th>Avg. Mastery</th>
            <th>Last Active</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="5" class="text-center py-4 text-muted">No student data available yet</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
`, activePage: 'analytics', pageTitle: 'School Analytics' }) %>
