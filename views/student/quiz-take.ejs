<%- include('../layouts/student', { body: `
<!-- Quiz Header -->
<div class="card mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h5 class="mb-1">${quiz.title}</h5>
        <small class="text-muted">${quiz.topic?.subject?.name || 'N/A'} - ${quiz.topic?.name || 'N/A'}</small>
      </div>
      <div class="d-flex align-items-center gap-3">
        ${quiz.timeLimit ? '<div class="text-center px-3 py-2 bg-warning rounded" id="timerDisplay"><i class="bi bi-clock me-1"></i><span id="timer" class="fw-bold">' + quiz.timeLimit + ':00</span></div>' : ''}
        <div class="text-center">
          <div class="fw-bold" id="progressText">0 / ${questions.length}</div>
          <small class="text-muted">Answered</small>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quiz Form -->
<form action="${typeof basePath !== 'undefined' ? basePath : ''}/student/quizzes/${quiz.id}/submit" method="POST" id="quizForm">
  <div class="row">
    <!-- Questions -->
    <div class="col-lg-8">
      ${questions.map((q, i) => {
        const savedAnswer = attempt.answers?.find(a => a.questionId === q.id)?.answer || '';
        let options = [];
        let matchingPairs = [];
        let orderingItems = [];
        try {
          if (q.options) {
            const parsed = JSON.parse(q.options);
            if (q.questionType === 'matching' && parsed.pairs) {
              matchingPairs = parsed.pairs;
            } else if (q.questionType === 'ordering' && parsed.items) {
              orderingItems = parsed.items;
            } else if (Array.isArray(parsed)) {
              options = parsed;
            }
          }
        } catch(e) { options = []; }

        let savedMatchingAnswers = {};
        let savedOrderingAnswer = [];
        try {
          if (savedAnswer && q.questionType === 'matching') {
            savedMatchingAnswers = JSON.parse(savedAnswer);
          } else if (savedAnswer && q.questionType === 'ordering') {
            savedOrderingAnswer = JSON.parse(savedAnswer);
          }
        } catch(e) {}

        // Shuffle right side for matching
        const shuffledRightSide = matchingPairs.length > 0 ? [...matchingPairs].map(p => p.right).sort(() => Math.random() - 0.5) : [];

        return '<div class="card mb-3 question-card" data-question="' + i + '" data-type="' + q.questionType + '"><div class="card-header bg-white d-flex justify-content-between align-items-center"><span class="fw-bold">Question ' + (i + 1) + '</span><span class="badge bg-primary">' + q.points + ' pt' + (q.points > 1 ? 's' : '') + '</span></div><div class="card-body"><p class="fs-5 mb-4">' + q.questionText + '</p>' +
          (q.questionType === 'multiple_choice' || q.questionType === 'true_false' ?
            '<div class="d-grid gap-2">' + options.map((opt, j) => '<div class="form-check p-3 border rounded ' + (savedAnswer === opt ? 'border-primary bg-light' : '') + '"><input class="form-check-input" type="radio" name="answers[' + q.id + ']" id="q' + q.id + '_' + j + '" value="' + opt + '" ' + (savedAnswer === opt ? 'checked' : '') + ' onchange="updateProgress()"><label class="form-check-label w-100" for="q' + q.id + '_' + j + '"><span class="badge bg-secondary me-2">' + String.fromCharCode(65 + j) + '</span>' + opt + '</label></div>').join('') + '</div>' :
          q.questionType === 'essay' ?
            '<textarea name="answers[' + q.id + ']" class="form-control" rows="6" placeholder="Write your essay response here..." onchange="updateProgress()">' + savedAnswer + '</textarea><small class="text-muted mt-2 d-block"><i class="bi bi-info-circle me-1"></i>Essay questions are graded manually by your teacher.</small>' :
          q.questionType === 'matching' ?
            '<input type="hidden" name="answers[' + q.id + ']" class="matching-answer-input" value=\\'' + (savedAnswer || '{}') + '\\'><div class="matching-container"><div class="row"><div class="col-md-6"><h6 class="text-muted mb-3">Items</h6>' + matchingPairs.map((pair, j) => '<div class="matching-item p-2 border rounded mb-2 d-flex justify-content-between align-items-center" data-left="' + pair.left + '"><span>' + pair.left + '</span><select class="form-select form-select-sm w-auto matching-select" data-qid="' + q.id + '" data-left="' + pair.left + '" onchange="updateMatchingAnswer(this)"><option value="">-- Select --</option>' + shuffledRightSide.map(r => '<option value="' + r + '"' + (savedMatchingAnswers[pair.left] === r ? ' selected' : '') + '>' + r + '</option>').join('') + '</select></div>').join('') + '</div></div></div>' :
          q.questionType === 'ordering' ?
            '<input type="hidden" name="answers[' + q.id + ']" class="ordering-answer-input" value=\\'' + (savedAnswer || '[]') + '\\'><div class="ordering-container" data-qid="' + q.id + '"><p class="text-muted mb-2"><i class="bi bi-arrows-move me-1"></i>Drag items to arrange them in the correct order</p><ul class="list-group ordering-list" id="ordering-' + q.id + '">' + (savedOrderingAnswer.length > 0 ? savedOrderingAnswer : [...orderingItems].sort(() => Math.random() - 0.5)).map((item, j) => '<li class="list-group-item d-flex align-items-center ordering-item" data-item="' + item + '" draggable="true"><span class="me-2 text-muted ordering-number">' + (j + 1) + '.</span><i class="bi bi-grip-vertical me-2 text-muted"></i>' + item + '</li>').join('') + '</ul></div>' :
            '<input type="text" name="answers[' + q.id + ']" class="form-control form-control-lg" placeholder="Type your answer..." value="' + savedAnswer + '" onchange="updateProgress()">'
          ) +
        '</div></div>';
      }).join('')}

      <!-- Submit -->
      <div class="card">
        <div class="card-body text-center py-4">
          <p class="text-muted mb-3">Make sure you have answered all questions before submitting.</p>
          <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Submit this quiz?\\n\\nYou cannot change your answers after submitting.')">
            <i class="bi bi-check-circle me-2"></i>Submit Quiz
          </button>
        </div>
      </div>
    </div>

    <!-- Question Navigator -->
    <div class="col-lg-4">
      <div class="card sticky-top" style="top: 80px;">
        <div class="card-header bg-white">
          <h6 class="mb-0"><i class="bi bi-grid me-2"></i>Questions</h6>
        </div>
        <div class="card-body">
          <div class="d-flex flex-wrap gap-2" id="questionNav">
            ${questions.map((q, i) => '<button type="button" class="btn btn-sm btn-outline-secondary question-nav-btn" data-index="' + i + '" onclick="scrollToQuestion(' + i + ')">' + (i + 1) + '</button>').join('')}
          </div>
          <hr>
          <div class="d-flex justify-content-between small text-muted">
            <span><span class="badge bg-success me-1">&nbsp;</span> Answered</span>
            <span><span class="badge bg-outline-secondary me-1">&nbsp;</span> Unanswered</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  // Timer
  ${quiz.timeLimit ? `
  let timeLeft = ${quiz.timeLimit} * 60;
  const timerEl = document.getElementById('timer');
  const timerDisplay = document.getElementById('timerDisplay');

  const timerInterval = setInterval(() => {
    timeLeft--;
    const mins = Math.floor(timeLeft / 60);
    const secs = timeLeft % 60;
    timerEl.textContent = mins + ':' + (secs < 10 ? '0' : '') + secs;

    if (timeLeft <= 60) {
      timerDisplay.classList.remove('bg-warning');
      timerDisplay.classList.add('bg-danger', 'text-white');
    }

    if (timeLeft <= 0) {
      clearInterval(timerInterval);
      alert('Time is up! Submitting your quiz...');
      document.getElementById('quizForm').submit();
    }
  }, 1000);
  ` : ''}

  // Progress tracking
  function updateProgress() {
    const questionCards = document.querySelectorAll('.question-card');
    let answered = 0;

    questionCards.forEach((card, index) => {
      const qType = card.dataset.type;
      let hasAnswer = false;

      if (qType === 'matching') {
        const hiddenInput = card.querySelector('.matching-answer-input');
        try {
          const matches = JSON.parse(hiddenInput.value);
          hasAnswer = Object.keys(matches).length > 0;
        } catch(e) {}
      } else if (qType === 'ordering') {
        const hiddenInput = card.querySelector('.ordering-answer-input');
        try {
          const order = JSON.parse(hiddenInput.value);
          hasAnswer = order.length > 0;
        } catch(e) {}
      } else if (qType === 'essay') {
        const textarea = card.querySelector('textarea[name^="answers"]');
        hasAnswer = textarea && textarea.value.trim().length > 0;
      } else {
        const inputs = card.querySelectorAll('input[type="radio"]:checked, input[type="text"][name^="answers"]');
        hasAnswer = Array.from(inputs).some(inp => inp.checked || (inp.type === 'text' && inp.value.trim()));
      }

      const navBtn = document.querySelectorAll('.question-nav-btn')[index];
      if (hasAnswer) {
        answered++;
        navBtn.classList.remove('btn-outline-secondary');
        navBtn.classList.add('btn-success');
      } else {
        navBtn.classList.remove('btn-success');
        navBtn.classList.add('btn-outline-secondary');
      }
    });

    document.getElementById('progressText').textContent = answered + ' / ${questions.length}';
  }

  // Matching question handler
  function updateMatchingAnswer(select) {
    const qid = select.dataset.qid;
    const left = select.dataset.left;
    const card = select.closest('.question-card');
    const hiddenInput = card.querySelector('.matching-answer-input');

    let matches = {};
    try {
      matches = JSON.parse(hiddenInput.value);
    } catch(e) {}

    if (select.value) {
      matches[left] = select.value;
    } else {
      delete matches[left];
    }

    hiddenInput.value = JSON.stringify(matches);
    updateProgress();
  }

  // Ordering question - drag and drop
  document.querySelectorAll('.ordering-list').forEach(list => {
    let draggedItem = null;

    list.querySelectorAll('.ordering-item').forEach(item => {
      item.addEventListener('dragstart', function(e) {
        draggedItem = this;
        this.classList.add('bg-light');
      });

      item.addEventListener('dragend', function() {
        this.classList.remove('bg-light');
        draggedItem = null;
      });

      item.addEventListener('dragover', function(e) {
        e.preventDefault();
      });

      item.addEventListener('drop', function(e) {
        e.preventDefault();
        if (draggedItem !== this) {
          const allItems = [...list.querySelectorAll('.ordering-item')];
          const draggedIdx = allItems.indexOf(draggedItem);
          const dropIdx = allItems.indexOf(this);

          if (draggedIdx < dropIdx) {
            this.parentNode.insertBefore(draggedItem, this.nextSibling);
          } else {
            this.parentNode.insertBefore(draggedItem, this);
          }

          updateOrderingNumbers(list);
          updateOrderingAnswer(list);
        }
      });
    });
  });

  function updateOrderingNumbers(list) {
    list.querySelectorAll('.ordering-item').forEach((item, idx) => {
      item.querySelector('.ordering-number').textContent = (idx + 1) + '.';
    });
  }

  function updateOrderingAnswer(list) {
    const qid = list.closest('.ordering-container').dataset.qid;
    const card = list.closest('.question-card');
    const hiddenInput = card.querySelector('.ordering-answer-input');

    const order = [...list.querySelectorAll('.ordering-item')].map(item => item.dataset.item);
    hiddenInput.value = JSON.stringify(order);
    updateProgress();
  }

  function scrollToQuestion(index) {
    const card = document.querySelectorAll('.question-card')[index];
    card.scrollIntoView({ behavior: 'smooth', block: 'center' });
  }

  // Initial progress check
  updateProgress();

  // Warn before leaving
  window.addEventListener('beforeunload', function(e) {
    e.preventDefault();
    e.returnValue = '';
  });

  // Remove warning when submitting
  document.getElementById('quizForm').addEventListener('submit', function() {
    window.removeEventListener('beforeunload', function() {});
  });
</script>
`, activePage: 'quizzes', pageTitle: quiz.title, branding, user }) %>
