<%- include('../layouts/student', { body: `
<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1"><i class="bi bi-clipboard2-pulse me-2"></i>Diagnostic Assessments</h4>
    <p class="text-muted mb-0">Discover your strengths and identify areas for improvement</p>
  </div>
</div>

<!-- Skill Gaps Alert -->
${skillGaps && skillGaps.length > 0 ? `
<div class="alert alert-warning mb-4">
  <div class="d-flex align-items-center gap-2">
    <i class="bi bi-exclamation-triangle-fill"></i>
    <strong>${skillGaps.length} Skill Gap${skillGaps.length !== 1 ? 's' : ''} Identified</strong>
  </div>
  <p class="mb-2 mt-2">Based on your diagnostic results, we've identified areas where you can improve:</p>
  <div class="d-flex flex-wrap gap-2">
    ${skillGaps.slice(0, 5).map(gap => '<span class="badge ' +
      (gap.priority === 'critical' ? 'bg-danger' :
       gap.priority === 'high' ? 'bg-warning text-dark' :
       'bg-info') + '">' + gap.skillName + ' (' + Math.round(gap.currentScore) + '%)</span>').join('')}
    ${skillGaps.length > 5 ? '<span class="badge bg-secondary">+' + (skillGaps.length - 5) + ' more</span>' : ''}
  </div>
</div>
` : ''}

<!-- Stats Cards -->
<div class="row g-4 mb-4">
  <div class="col-md-3">
    <div class="stat-card">
      <div class="d-flex align-items-center gap-3">
        <div class="stat-icon bg-primary bg-opacity-10 text-primary">
          <i class="bi bi-clipboard-check"></i>
        </div>
        <div>
          <div class="stat-value">${tests?.length || 0}</div>
          <div class="stat-label">Available Tests</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="stat-card">
      <div class="d-flex align-items-center gap-3">
        <div class="stat-icon bg-success bg-opacity-10 text-success">
          <i class="bi bi-check-circle"></i>
        </div>
        <div>
          <div class="stat-value">${history?.length || 0}</div>
          <div class="stat-label">Completed</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="stat-card">
      <div class="d-flex align-items-center gap-3">
        <div class="stat-icon bg-info bg-opacity-10 text-info">
          <i class="bi bi-graph-up-arrow"></i>
        </div>
        <div>
          <div class="stat-value">${history?.length > 0 ? Math.round(history.reduce((sum, h) => sum + (h.score || 0), 0) / history.length) : '-'}%</div>
          <div class="stat-label">Avg Score</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="stat-card">
      <div class="d-flex align-items-center gap-3">
        <div class="stat-icon bg-warning bg-opacity-10 text-warning">
          <i class="bi bi-lightbulb"></i>
        </div>
        <div>
          <div class="stat-value">${skillGaps?.filter(g => !g.isResolved).length || 0}</div>
          <div class="stat-label">Skill Gaps</div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Available Tests -->
<div class="card mb-4">
  <div class="card-header bg-white">
    <h6 class="mb-0"><i class="bi bi-list-check me-2"></i>Available Diagnostic Tests</h6>
  </div>
  <div class="card-body">
    ${tests && tests.length > 0 ? `
    <div class="row g-4">
      ${tests.map(test => {
        const testHistory = history?.filter(h => h.testId === test.id) || [];
        const latestAttempt = testHistory[0];
        const bestScore = testHistory.length > 0 ? Math.max(...testHistory.map(h => h.score || 0)) : null;

        return '<div class="col-md-6 col-lg-4"><div class="card h-100 border"><div class="card-body"><div class="d-flex justify-content-between align-items-start mb-2"><h6 class="mb-0">' + test.title + '</h6>' +
          (latestAttempt ? '<span class="badge ' +
            (latestAttempt.proficiencyLevel === 'advanced' ? 'bg-success' :
             latestAttempt.proficiencyLevel === 'proficient' ? 'bg-primary' :
             latestAttempt.proficiencyLevel === 'basic' ? 'bg-warning text-dark' : 'bg-danger') + '">' +
            (latestAttempt.proficiencyLevel || 'Completed').replace('_', ' ') + '</span>' :
           '<span class="badge bg-secondary">New</span>') +
          '</div>' +
          (test.description ? '<p class="text-muted small mb-3">' + test.description + '</p>' : '') +
          '<div class="d-flex flex-wrap gap-2 mb-3">' +
            '<span class="badge bg-light text-dark"><i class="bi bi-question-circle me-1"></i>' + (test._count?.questions || test.questionCount || 20) + ' questions</span>' +
            (test.timeLimit ? '<span class="badge bg-light text-dark"><i class="bi bi-clock me-1"></i>' + test.timeLimit + ' min</span>' : '') +
            '<span class="badge bg-light text-dark"><i class="bi bi-bar-chart me-1"></i>Grade ' + (test.minGradeLevel || 0) + '-' + (test.maxGradeLevel || 12) + '</span>' +
          '</div>' +
          '<div class="row text-center border-top pt-3">' +
            '<div class="col-4"><div class="fw-bold text-primary">' + testHistory.length + '</div><small class="text-muted">Attempts</small></div>' +
            '<div class="col-4"><div class="fw-bold ' + (bestScore !== null ? (bestScore >= 70 ? 'text-success' : 'text-danger') : 'text-muted') + '">' + (bestScore !== null ? bestScore.toFixed(0) + '%' : '-') + '</div><small class="text-muted">Best</small></div>' +
            '<div class="col-4"><div class="fw-bold text-info">' + (latestAttempt?.estimatedGradeLevel?.toFixed(1) || '-') + '</div><small class="text-muted">Level</small></div>' +
          '</div>' +
        '</div>' +
        '<div class="card-footer bg-white">' +
          '<button class="btn btn-primary btn-sm w-100" onclick="startDiagnostic(\\'' + test.id + '\\')">' +
            '<i class="bi bi-play-fill me-1"></i>' + (testHistory.length > 0 ? 'Retake Test' : 'Start Test') +
          '</button>' +
        '</div></div></div>';
      }).join('')}
    </div>
    ` : `
    <div class="text-center py-5">
      <div class="mb-4"><i class="bi bi-clipboard2-pulse fs-1 text-muted"></i></div>
      <h5>No Diagnostic Tests Available</h5>
      <p class="text-muted mb-0">Diagnostic tests will appear here when they are assigned to your grade level.</p>
    </div>
    `}
  </div>
</div>

<!-- Test History -->
${history && history.length > 0 ? `
<div class="card">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Your Diagnostic History</h6>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="bg-light">
          <tr>
            <th>Test</th>
            <th>Date</th>
            <th>Score</th>
            <th>Level</th>
            <th>Proficiency</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          ${history.map(attempt => `
          <tr>
            <td><strong>${attempt.testTitle}</strong></td>
            <td>${attempt.completedAt ? new Date(attempt.completedAt).toLocaleDateString() : '-'}</td>
            <td>
              <span class="fw-bold ${attempt.score >= 70 ? 'text-success' : 'text-danger'}">
                ${attempt.score?.toFixed(0) || 0}%
              </span>
            </td>
            <td>${attempt.estimatedGradeLevel?.toFixed(1) || '-'}</td>
            <td>
              <span class="badge ${
                attempt.proficiencyLevel === 'advanced' ? 'bg-success' :
                attempt.proficiencyLevel === 'proficient' ? 'bg-primary' :
                attempt.proficiencyLevel === 'basic' ? 'bg-warning text-dark' : 'bg-danger'
              }">
                ${(attempt.proficiencyLevel || 'unknown').replace('_', ' ')}
              </span>
            </td>
            <td class="text-end">
              <a href="${typeof basePath !== 'undefined' ? basePath : ''}/student/diagnostics/results/${attempt.id}" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-eye me-1"></i>View Results
              </a>
            </td>
          </tr>
          `).join('')}
        </tbody>
      </table>
    </div>
  </div>
</div>
` : ''}

<script>
  const basePath = '${typeof basePath !== 'undefined' ? basePath : ''}';

  async function startDiagnostic(testId) {
    try {
      const response = await fetch(basePath + '/student/diagnostics/' + testId + '/start', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });

      const data = await response.json();

      if (data.success) {
        window.location.href = basePath + '/student/diagnostics/attempt/' + data.attemptId;
      } else {
        alert('Failed to start test: ' + (data.error || 'Unknown error'));
      }
    } catch (error) {
      console.error('Start diagnostic error:', error);
      alert('Failed to start diagnostic test. Please try again.');
    }
  }
</script>
`, activePage: 'diagnostics', pageTitle: 'Diagnostic Assessments', branding, user }) %>
